<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="market_list"
        android:title="@string/pref_choose_market"
        android:defaultValue="109"
        android:summary="%s"
        android:entries="@array/pref_market_titles"
        android:entryValues="@array/pref_market_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="unit"
        android:title="@string/unit"
        android:defaultValue="1.0"
        android:summary="%s"
        android:entries="@array/pref_unit_titles"
        android:entryValues="@array/pref_unit_values" />

    <CheckBoxPreference
        android:key="role"
        android:title="@string/customer_mode"
        android:summary="@string/customer_mode_description"
        android:defaultValue="false" />

    <PreferenceCategory android:title="@string/other_info" />

    <Preference android:title="@string/about" android:key="about"></Preference>

    <Preference android:title="@string/contact" android:key="contact"></Preference>

    <Preference android:title="@string/rating" android:key="rating"></Preference>

</PreferenceScreen>
