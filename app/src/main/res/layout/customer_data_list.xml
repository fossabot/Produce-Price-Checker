<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF2F4"
    android:orientation="vertical"
    tools:context="com.jarvislin.producepricechecker.DataListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollView" >

        <TableLayout
            android:shrinkColumns="0"
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:text="品種"
                    style="@style/TableHeader"/>
                <TextView android:text="名稱"
                    style="@style/TableHeader"/>
                <TextView android:text="平均價格區間"
                    style="@style/TableHeader"/>
            </TableRow>

        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/DataTitle"
            android:text="單位："
            android:gravity="left" />

        <TextView
            style="@style/DataTitle"
            android:text="台斤/元"
            android:gravity="right"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/DataTitle"
            android:text="市場："
            android:gravity="left" />

        <TextView
            android:id="@+id/marketName"
            style="@style/DataTitle"
            android:gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/DataTitle"
            android:text="查詢日期："
            android:gravity="left"/>

        <TextView
            style="@style/DataTitle"
            android:id="@+id/currentDate"
            android:gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/DataTitle"
            android:text="資料日期："
            android:gravity="left" />

        <TextView
            android:id="@+id/dataDate"
            style="@style/DataTitle"
            android:gravity="right"
            android:layout_weight="1"/>/>

    </LinearLayout>
</LinearLayout>
